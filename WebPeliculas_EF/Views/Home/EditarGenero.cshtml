@using Datos.Model
@model GenerosPelicula
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditarGenero</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <div class="container">
        <h1>Editar Genero</h1>
        @if (TempData["ERROR"] != null)
        {
            <div class="alert alert-danger">
                <b>Ocurrio un error: </b>@(TempData["ERROR"])
            </div>
        }
        <form method="post" action="/Home/EditarGenero">
            <input type="hidden" value="@Model.idGeneroPelicula" name="IDGeneroPelicula" />
            @Html.TextBox("Genero", Model.genero, new { @class = "form-control", required = "required" })
            <a href="/Home/VistaGeneros" class="btn btn-secondary">Regresar</a>
            <input type="submit" value="Actualizar" class="btn btn-success" />
        </form>

    </div>
</body>
</html>
